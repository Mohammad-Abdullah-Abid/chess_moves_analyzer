{
    "manifest_version": 3,
    "name": "Chess Board Coverage",
    "version": "1.1",
    "description": "Highlights controlled squares on chess.com.",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://www.chess.com/*"],
        "js": ["content.js"],
        "css": ["overlay.css"],
        "run_at": "document_idle"
      }
    ]
  }
  